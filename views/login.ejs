<section class="flex w-screen h-screen justify-center items-center">
  <div class="shadow-md flex flex-col justify-evenly items-center h-[80%] lg:w-[40%]">
    <div>
      <img src="/public/images/Black___White_Minimalist_Business_Logo__3_-removebg-preview.png" alt="" srcset="">
    </div>
    <h2 class="text-2xl font-semibold p-2 border-b-2 ">Log in</h2>
    <form action="/login" class="flex lg:w-[70%] flex-col " method="post">
      <input
        type="email"
        placeholder="email..."
        class="p-3 rounded-full border-2 border-transparent focus:bg-white focus:border-black bg-gray-100 mb-4 outline-none"
        name="username"
      />
      <input
        type="password"
        placeholder="password..."
        name="password"
        id=""
        class="p-3 rounded-full border-2 border-transparent  focus:bg-white focus:border-black bg-gray-100 mb-4 outline-none"
      />
      <button type="submit" class="p-4 duration-150 font-semibold bg-white rounded-2xl hover:bg-black hover:text-white border-2 hover:border-white">log in</button>
    </form>

    <div class="flex lg:w-[70%] flex-col">
      <a class="p-3 shadow-inner shadow-red-500 w-full duration-200 mb-3 flex items-center group justify-center bg-white text-center rounded-lg hover:bg-red-500 hover:text-white" href="/auth/google"
        ><i class="fa-brands mr-2 fa-google text-2xl group-hover:text-white text-red-500"></i>Google</a
      >
      <a class="p-3 w-full shadow-inner shadow-blue-500 duration-200 mb-3 flex items-center group justify-center bg-white text-center rounded-lg hover:bg-blue-500 hover:text-white" href="/auth/facebook"
        ><i class="fa-brands mr-2 fa-facebook text-2xl group-hover:text-white text-blue-500 "></i>Facebook</a
      >
  </div>

    <p class="text-sm text-gray-800 text-center">
      if you don't already have an account, <a class="text-blue-500 hover:text-red-500 duration-200 font-bold text-md" href="/signup">sign up</a>
    </p>

  </div>
</section>

<%- include("partials/footer") -%>
