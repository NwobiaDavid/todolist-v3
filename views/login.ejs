<%- include("partials/header") -%>

<section
  class="flex justify-center h-[60%] w-[55%]  rounded-lg p-3"
>
  <div class="w-[60%] flex justify-center">
    <img
      class=""
      src="../public/images/3d-business-man-and-woman-working-at-the-table.png"
      alt=""
      srcset=""
    />
  </div>
  <div class="w-3 h-full bg-black mr-4"></div>
  <div class="w-1 h-full bg-black mr-2"></div>
  <div
    class="border-l-2 px-4 flex bg-black rounded-r-lg w-[45%] flex-col justify-evenly mr-3"
  >
    <form action="/login" class="flex w-full flex-col" method="post">
      <input
        type="email"
        placeholder="email"
        class="p-3 rounded-full mb-4 outline-none "
        name="username"
      />
      <input
        type="password"
        placeholder="password"
        class="p-3 rounded-full mb-8 outline-none "
        name="password"
        id=""
      />
      <button type="submit" class="p-4 duration-150 font-semibold bg-white rounded-2xl hover:bg-black hover:text-white border-2 hover:border-white">log in</button>
    </form>

    <div class="flex flex-col">
        <a class="p-3 w-full duration-150 mb-3 flex items-center group justify-center bg-white text-center rounded-lg hover:bg-red-500 hover:text-white" href="/auth/google"
          ><i class="fa-brands mr-2 fa-google text-2xl group-hover:text-white text-red-500"></i>Google</a
        >
        <a class="p-3 w-full duration-150 mb-3 flex items-center group justify-center bg-white text-center rounded-lg hover:bg-blue-500 hover:text-white" href="/auth/facebook"
          ><i class="fa-brands mr-2 fa-facebook text-2xl group-hover:text-white text-blue-500 "></i>Facebook</a
        >
    </div>

    <p class="text-sm text-white text-center">
      do you already have an account?<a class="text-blue-500 hover:text-blue-100 font-bold text-md" href="/signup">sign in</a>
    </p>
  </div>
</section>

<%- include("partials/footer") -%>
